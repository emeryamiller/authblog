= form_for [:admin, @group] do |f|
  = f.error_messages
  %p
    = f.label :name
    = f.text_field :name

  - if @users
    - @users.each do |user|
      = check_box_tag "user[user_id][]", user.id, @group.users.include?(user), {:id=>"user_#{user.id}"}
      = label_tag "user_#{user.id}", user.email

  = f.submit
