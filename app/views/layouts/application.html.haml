!!!
%html
  %head
    %title Weblog40
    = stylesheet_link_tag :all
    = stylesheet_link_tag 'grid.css', :media => 'screen, projection'
    = stylesheet_link_tag 'text.css', :media => 'screen, projection'
    = javascript_include_tag :defaults
    = csrf_meta_tag
    = yield :header

  %body
    #container
      %header

      %nav
        = link_to_unless_current "Posts", posts_path
        - if !user_signed_in?
          = link_to_unless_current "Sign in", new_authentication_path
        - else
          = "Signed in as #{current_user.email}"
          = link_to_unless_current "Account", authentications_path
          = link_to "Sign out", destroy_user_session_path

        = admins_only do
          = link_to "Admin", admin_root_path

      - flash.each do |key, value|
        %div.flash{:id => "#{key}"} 
          = value
      %article
        = yield

      %footer
